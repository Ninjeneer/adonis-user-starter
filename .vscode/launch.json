{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Debug Adonis Server",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"ace",
				"serve",
				"--watch"
			],
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Debug Tests",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"test"
			],
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
